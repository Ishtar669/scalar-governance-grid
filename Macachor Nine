"""
Macachor-9 (M9) Core Definitions
Copyright (c) 2026 Christopher Macachor
MIT License
"""
import numpy as np

def coherence_field(states):
    """
    M9 Dimension 1: Coherence Field (C)
    C = (1/N) Î£ (x_i / ||x_i||)
    
    Measures directional alignment of subsystem state vectors.
    
    Parameters
    ----------
    states : np.ndarray
        Array of shape (N, d) representing N subsystem states in d dimensions.
    
    Returns
    -------
    C : np.ndarray
        The coherence field vector of length d.
    """
    norms = np.linalg.norm(states, axis=1, keepdims=True)
    normalized = states / (norms + 1e-12)  # Avoid division by zero
    return np.mean(normalized, axis=0)

def transition_ratio(prev_state, next_state, epsilon=1e-12):
    """
    M9 Dimension 3: Transition Ratio (T)
    T = ||x_next - x_prev|| / (||x_prev|| + Îµ)
    
    Quantifies magnitude of change between system states.
    A transition is 'lawful' if T < threshold Ï„.
    
    Parameters
    ----------
    prev_state, next_state : np.ndarray
        System state vectors.
    epsilon : float
        Small constant for numerical stability.
    
    Returns
    -------
    T : float
        Transition ratio.
    """
    delta = np.linalg.norm(next_state - prev_state)
    prev_norm = np.linalg.norm(prev_state)
    return delta / (prev_norm + epsilon)

# Add other M9 dimension functions here...
# stability_gradient, resource_allocation, resonance, etc.

class Macachor9System:
    """Main class for governing system evolution using M9 framework."""
    
    def __init__(self, initial_state, m9_limit=1.0):
        self.state = initial_state
        self.m9_limit = m9_limit
        self.lineage = [initial_state.copy()]
    
    def propose_transition(self, next_state, tau=0.1):
        """
        Propose a state transition governed by M9 rules.
        
        Returns
        -------
        approved : bool
            True if transition satisfies M9 criteria.
        """
        T = transition_ratio(self.state, next_state)
        
        # Example governance logic
        if T < tau:
            self.state = next_state
            self.lineage.append(next_state.copy())
            return True
        return False

"""
Tests for Macachor-9 core functionality.
Copyright (c) 2026 Christopher Macachor
MIT License
"""
import numpy as np
from src.macachor9 import core

def test_coherence_field():
    """Test coherence calculation for aligned states."""
    states = np.array([[1, 0], [0.9, 0.1], [0.8, 0.2]])
    C = core.coherence_field(states)
    assert C.shape == (2,)
    print("âœ“ coherence_field test passed")

def test_transition_ratio():
    """Test transition ratio calculation."""
    prev = np.array([1.0, 0.0])
    next = np.array([1.1, 0.05])
    T = core.transition_ratio(prev, next)
    assert T > 0
    print(f"âœ“ transition_ratio = {T:.4f}")
    
if __name__ == "__main__":
    test_coherence_field()
    test_transition_ratio()
    print("All core tests passed.")# Add all files to git
