# In your YAML config file:
transforms:
  - name: StandardScaler
    params:
      columns: ["age", "income", "score"]
  - name: OneHotEncoder
    params:
      columns: ["category", "department"]
      drop_first: true
  - name: LogTransformer
    params:
      columns: ["revenue", "sales"]
      offset: 1
            </div>
        </div>
        
